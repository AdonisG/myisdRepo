pass1="12345678"
x=int(0)
while x <= 5:
    x+=1
    pass2=input("Please enter your password: ")
    if pass1==pass2:
        print("Access granted, Attempt",x,"out of 5")
        break
    elif pass1 != pass2 and x == 5:
        print("Access denied, Attempt 5 out of 5")
        break
    elif pass1 != pass2:
        print("Access denied, Attempt",x,"out of 5")
